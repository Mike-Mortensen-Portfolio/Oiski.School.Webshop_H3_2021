@page "{orderID?}";
@model Oiski.School.H3_2021.Webshop.WebApp.Pages.Cart.ShoppingCartIndexModel
@{
}

<div class="container">
    <div class="text-center">
        <div class="row m-auto">
            <div class="col-9">
                <h1>This is your shopping cart!</h1>
            </div>
            <div class="col-3">
                <button class="btn btn-secondary" style="width:90px; margin-right:8px;">Refresh</button>
            </div>
            <hr />
        </div>
        
        <div class="row m-auto">
            <div class="col-md">
                <table class="table">
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td class="col-2">
                                    @Html.DisplayFor(modelItem => product.Title)

                                </td>
                                <td class="col-2">
                                    @foreach (var order in product.Orders)
                                    {

                                        <input type="number" value="@Html.DisplayFor(modelItem => order.Quantity)" />
                                    }
                                </td>
                                <td class="col-2">
                                    <b>$</b>@Html.DisplayFor(modelItem => product.Price)
                                </td>
                                <td class="col-2">
                                    <input type="submit" asp-action="RemoveFromOrder" class="btn btn-danger" value="Remove" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row m-auto">
            <div class="col-6">
                <button class="btn btn-info">Continue shopping</button>
            </div>
            <form method="post">
                <div class="col-6">
                    <input type="submit" asp-action="ProceedToCheckout" class="btn btn-success" value="Proceed to checkout" />
                </div>
            </form>
        </div>
    </div>
</div>